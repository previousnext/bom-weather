{
  "name": "previousnext/bom-weather",
  "description": "PHP lib for accessing the Australian Bureau of Meteorology (BOM) weather forecasts and observations.",
  "license": "GPL-2.0-or-later",
  "authors": [
    {
      "name": "Kim Pepper",
      "email": "kim@previousnext.com.au"
    }
  ],
  "require": {
    "php": "^8.1",
    "ext-xml": "*",
    "php-http/discovery": "^1.0",
    "php-http/httplug": "^2.0",
    "psr/http-factory": "^1.0",
    "psr/http-client-implementation": "^1.0",
    "psr/http-message": "^1.0",
    "psr/log": "^1.1",
    "symfony/serializer": "^6.4"
  },
  "require-dev": {
    "dealerdirect/phpcodesniffer-composer-installer": "^1.0",
    "guzzlehttp/psr7": "^1.0",
    "http-interop/http-factory-guzzle": "^1.2",
    "php-http/message": "^1.0",
    "php-http/mock-client": "^1.0",
    "phpstan/phpstan": "^1.10",
    "phpunit/phpunit": "^9.6",
    "previousnext/coding-standard": "^0.1.3",
    "staabm/annotate-pull-request-from-checkstyle": "^1.8"
  },
  "autoload": {
    "psr-4": {"BomWeather\\": "src/"}
  },
  "autoload-dev": {
    "psr-4": {"BomWeather\\Tests\\": "tests/src"}
  },
  "config": {
    "bin-dir": "bin/",
    "preferred-install": {
      "*": "dist"
    },
    "sort-packages": true,
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true,
      "php-http/discovery": true
    }
  }
}
